
public class Tutorial2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int pocitadlo = 0;
		int p;
		// dokud 
		while( pocitadlo < 20) {
			System.out.println("Číslo počítadla je: " + pocitadlo);
			pocitadlo++;
			p = ++pocitadlo;
		}
		
		for(int a = 0; a < 20; a++) {
			System.out.println("Cislo: " + a);
		}
		
	}

}
